		<div style="background-color: #f8f8f8; height: max-content; padding-bottom: 10px;">
        <div class="container" style="padding-top: 70px;">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>번호</th>
                        <th>제목</th>
                        <th>작성자</th>
                        <th>날짜</th>
                        <th>조회수</th>
                    </tr>
                </thead>
                <%for (var i=0; i<list.length; i++){%>
                    <tbody>
                        <tr>
                            <td><%=list[i].id%></td>
                            <td><%=list[i].title%></td>
                            <td><%=list[i].author%></td>
                            <td><%=list[i].update_date.split(' ')[0]%></td>
                            <td><%=list[i].view_cnt%></td>
                        </tr>
                    </tbody>
                <%}%>
            </table>
            <hr/>
            <a class="btn btn-default pull-right" data-toggle="modal" data-target="#myModal">작성</a>
