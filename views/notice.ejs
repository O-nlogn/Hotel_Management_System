            <div id="myModal" class="modal fade" role="dialog">
              <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                  <form method = "post" action = "/notice_enrollment">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 height=20 align= center bgcolor=#ccc>공지사항 작성</h4>
                  </div>
                  <div class="modal-body">
                                    <div class="form-group">
                                        <label form="reservation_name">작성자</label>
                                        <input name="reservation_name" type="text" id="reservation_name"
                                            class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label form="reservation_birth">제목</label>
                                        <input type="text" name="reservation_birth" id="reservation_birth" size="12"
                                            class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label form="reservation_name">내용</label>
                                        <input name="reservation_name" type="text" id="reservation_name"
                                            class="form-control" style="height:200px;">
                                    </div>
                                    <div class="form-group">
                                        <label form="reservation_name">비밀번호</label>
                                        <input name="reservation_name" type="text" id="reservation_name"
                                            class="form-control">
                                    </div>
                  </div>
                  <div class="modal-footer">
                      <!-- <input type = "submit" value="작성" onclick="back_to_list()"> -->
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                  </div>
                    </form>
                </div>

              </div>
