<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8'>
        <title>
            O-(nlogn) 로그인
        </title>
        <style>
            legend {
                position: absolute;
                width: 0;
                height: 0;
                font-size: 0;
            }
            @import url('https://fonts.googleapis.com/css2?family=Nanum+Gothic&display=swap');
            *{
                font-family: 'Nanum Gothic', sans-serif;
            }
            .style1 {
                font-size: 11px;
                color: darkgrey;
                text-align: left;
            }

            #box {
                text-align: center;
            }
            .btn_submit {
                background-color: powderblue;
                padding: 10px 40px;
                border: 1px solid powderblue;
                color: #fff;
            }

            button {
                border-radius: 5px;
                margin-top: 10px;
            }
            
            dd {
                margin-left: 0;
            }

            dt {
                text-align: left;
            }
            
            #container {
                border: solid 1px black;
                width: max-content;
                padding: 20px;
                border-radius: 5px;
                margin: auto;
            }

            .header {
                border-bottom: solid 1px black;
                text-align: left;
                margin-bottom: 20px;
            }
        </style>
        <script>
            function login(){
                var loginForm = document.loginForm;
                var id = loginForm.id.value;
                var pw = loginForm.pw.value;
                if(!id || !pw){
                    alert("아이디와 비밀번호를 모두 입력해주세요.")
                }else{
                    loginForm.submit();
                }
            }
        </script>
    </head>
    <body>
        <div id="box">
            <div id="header" style="margin-bottom: 50px;">
                <h1>O-(nlogn) Hotel Management System</h1>
            </div>
            <div id="container" style="margin-bottom: 50px;">
                <div class="header">
                    <strong>로그인</strong>
                </div>
                <div>
                    <form name="loginForm" action="/login_data" method="post">
                        <dl>
                            <dt><label for="id" class="style1">아이디 (사번)</label></dt>
                            <dd><input type="text" class="text" name="id"></dd>
                            <dt><label for="pw" class="style1">비밀번호</label></dt>
                            <dd><input type="password" class="text" name="pw"></dd>
                            
                            <!-- 로그인 실패 여부에 따라 로그인 박스 ui다르게-->
                            <%if(login === 'false'){%>
                                <p class="style1" style="font-weight: bold; color: rgba(201, 0, 0, 0.8)">아이디 또는 비밀번호가 틀렸습니다.</p>
                            <%} %>
                        </dl>
                        <!-- <button type="submit" class="btn_submit" onclick="location.href='/main';">로그인</button> 
                        button -> input으로 변경-->
                        <input type="button" onclick="login()" value="로그인" class="btn_submit" onclick="location.href='/main';">
                    </form>
                </div>
            </div>
            <div id="footer">
                <h6>031-123-4567</h6>
            </div>
        </div>
    </body>
</html>